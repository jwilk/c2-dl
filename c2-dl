set -e -u
set -o pipefail
export LC_ALL=C

usage()
{
    local prog="${0##*/}"
    printf 'Usage:\n  %s URL\n  %s TITLE\n' "$prog" "$prog"
}

bad_usage()
{
    usage >&2
    exit 1
}

[ $# -eq 1 ] || bad_usage
arg="$1"
if [[ $arg = '-h' ]] || [[ $arg = '--help' ]]
then
    usage
    exit 0
fi
if [[ $arg =~ ^https?://wiki[.]c2[.]com/[?]([A-Za-z0-9_]+)$ ]]
then
    title=${BASH_REMATCH[1]}
elif [[ $arg =~ ^https?://c2.com/cgi-bin/wiki[?]([A-Za-z0-9_]+)$ ]]
then
    title=${BASH_REMATCH[1]}
elif [[ $arg =~ ^https?://wiki[.]c2[.]com($|/) ]]
then
    title=WelcomeVisitors
elif [[ $arg =~ ^[A-Za-z0-9_]+$ ]]
then
    title=$arg
else
    bad_usage
fi
url="https://c2.com/wiki/remodel/pages/$title"
tmpca=$(mktemp -t c2-dl.XXXXXX)
cat > "$tmpca" <<EOF  # (Let's Encrypt) R3
-----BEGIN CERTIFICATE-----
MIIFFjCCAv6gAwIBAgIRAJErCErPDBinU/bWLiWnX1owDQYJKoZIhvcNAQELBQAw
